{
  "name": "alloyify",
  "description": "Alloyify Anvil",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "boot": "pnpm clean:node_modules && pnpm install && pnpm build:force",
    "build": "turbo run build",
    "build:force": "pnpm clean:build && pnpm build --force",
    "clean:build": "npx rimraf ./packages/**/.turbo ./packages/**/dist",
    "clean:node_modules": "npx rimraf ./**/node_modules ./pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{ts,md}\"",
    "format:staged": "pretty-quick --pattern \"packages/**/*.*(ts|md)\"",
    "link:global": "turbo run link:global",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "17.0.30",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "cpx": "1.5.0",
    "eslint": "8.14.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "latest",
    "ts-jest": "27.1.4",
    "tsconfig-extends": "1.0.1",
    "tslib": "2.4.0",
    "turbo": "latest",
    "typescript": "4.6.4"
  },
  "packageManager": "pnpm@7.0.0-rc.9"
}
